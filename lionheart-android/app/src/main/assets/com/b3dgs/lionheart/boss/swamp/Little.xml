<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<lionengine:featurable xmlns:lionengine="http://lionengine.b3dgs.com/xsd/9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://lionengine.b3dgs.com/xsd/9 http://lionengine.b3dgs.com/xsd/9/featurable.xsd">
    <lionengine:class>com.b3dgs.lionengine.helper.EntityHelper</lionengine:class>
    <lionengine:setup>com.b3dgs.lionheart.object.SetupEntity</lionengine:setup>
    <lionengine:features>
        <lionengine:feature>com.b3dgs.lionheart.object.EntityModel</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.Stats</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.Hurtable</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.BossSwampLittle</lionengine:feature>
    </lionengine:features>
    <lionengine:surface image="Little.png"/>
    <lionengine:frames horizontal="8" vertical="3"/>
    <lionengine:size width="16" height="20"/>
    <lionengine:origin>CENTER_BOTTOM</lionengine:origin>
    <lionengine:animations>
        <lionengine:animation name="idle" start="1" end="1" speed="0.3" reversed="false" repeat="false"/>
        <lionengine:animation name="walk" start="1" end="8" speed="0.3" reversed="false" repeat="true"/>
        <lionengine:animation name="hurt" start="1" end="1" speed="0.3" reversed="false" repeat="false"/>
    </lionengine:animations>
    <lionengine:collisions>
        <lionengine:collision name="body" offsetX="0" offsetY="0" width="8" height="14" mirror="false"/>
        <lionengine:collision name="attack" offsetX="0" offsetY="0" width="8" height="14" mirror="false"/>
    </lionengine:collisions>
    <lionengine:layerable layerRefresh="7" layerDisplay="6"/>
    <lionengine:collidable group="2" accepted="1"/>
    <stats health="1"/>
    <hurtable effect="boss/swamp/ExplodeLittle.xml"/>
    <shade horizontal="4" vertical="2"/>
    <alwaysUpdate>true</alwaysUpdate>
</lionengine:featurable>