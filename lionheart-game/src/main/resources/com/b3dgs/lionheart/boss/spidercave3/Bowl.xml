<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<lionengine:featurable xmlns:lionengine="http://lionengine.b3dgs.com/xsd/9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://lionengine.b3dgs.com/xsd/9 http://lionengine.b3dgs.com/xsd/9/featurable.xsd">
    <lionengine:class>com.b3dgs.lionengine.helper.EntityHelper</lionengine:class>
    <lionengine:features>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.Stats</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.BossSpidercaveBowl</lionengine:feature>
    </lionengine:features>
    <lionengine:surface image="Bowl.png"/>
    <lionengine:frames horizontal="3" vertical="2"/>
    <lionengine:size width="16" height="16"/>
    <lionengine:origin>CENTER_BOTTOM</lionengine:origin>
    <lionengine:animations>
        <lionengine:animation name="fall" start="1" end="3" speed="0.15" reversed="true" repeat="true"/>
        <lionengine:animation name="hatch" start="4" end="6" speed="0.2" reversed="false" repeat="false"/>
    </lionengine:animations>
    <lionengine:collisions>
        <lionengine:collision name="body" offsetX="0" offsetY="0" width="8" height="14" mirror="false"/>
        <lionengine:collision name="attack" offsetX="0" offsetY="0" width="8" height="14" mirror="false"/>
    </lionengine:collisions>
    <lionengine:categories>
        <lionengine:category name="center" axis="Y" x="0" y="0">
            <lionengine:group>ground</lionengine:group>
        </lionengine:category>
    </lionengine:categories>
    <lionengine:layerable layerRefresh="1" layerDisplay="4"/>
    <lionengine:collidable group="2" accepted="1"/>
    <alwaysUpdate>true</alwaysUpdate>
</lionengine:featurable>