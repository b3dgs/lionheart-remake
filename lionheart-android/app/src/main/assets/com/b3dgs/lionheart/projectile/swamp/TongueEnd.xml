<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<lionengine:featurable xmlns:lionengine="http://lionengine.b3dgs.com/xsd/9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://lionengine.b3dgs.com/xsd/9 http://lionengine.b3dgs.com/xsd/9/featurable.xsd">
    <lionengine:class>com.b3dgs.lionengine.helper.EntityHelper</lionengine:class>
    <lionengine:setup>com.b3dgs.lionheart.object.SetupEntity</lionengine:setup>
    <lionengine:features>
        <lionengine:feature>com.b3dgs.lionheart.object.EntityModel</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.Stats</lionengine:feature>
        <lionengine:feature>com.b3dgs.lionheart.object.feature.Hurtable</lionengine:feature>
    </lionengine:features>
    <lionengine:surface image="TongueEnd.png"/>
    <lionengine:frames horizontal="1" vertical="1"/>
    <lionengine:size width="16" height="16"/>
    <lionengine:origin>CENTER_BOTTOM</lionengine:origin>
    <lionengine:animations>
        <lionengine:animation name="idle" start="1" end="1" speed="0.25" reversed="false" repeat="true"/>
        <lionengine:animation name="hurt" start="1" end="1" speed="0.25" reversed="false" repeat="true"/>
    </lionengine:animations>
    <lionengine:collisions>
        <lionengine:collision name="attack" offsetX="4" offsetY="6" width="8" height="6" mirror="true"/>
        <lionengine:collision name="body" offsetX="4" offsetY="6" width="8" height="6" mirror="true"/>
    </lionengine:collisions>
    <lionengine:state>com.b3dgs.lionheart.object.state.StateIdle</lionengine:state>
    <lionengine:rasterable extern="true"/>
    <lionengine:layerable layerRefresh="1" layerDisplay="8"/>
    <lionengine:collidable group="3" accepted="1"/>
    <stats health="1"/>
    <hurtable frame="-1" effect="effect/swamp/ExplodeLittle.xml" persist="true"/>
</lionengine:featurable>